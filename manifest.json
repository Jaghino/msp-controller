{
    "manifest_version": 2,
    "minimum_chrome_version": "38",
    "version": "1.0.0",
    "author": "Betaflight Squad",
    "name": "MSP - Controller",
    "short_name": "Betaflight",
    "description": "Crossplatform controller for MSP-based flight control system",

    "offline_enabled": true,

    "default_locale": "en",

    "app": {
        "background": {
            "scripts": ["eventPage.js"],
            "persistent": false
        }
    },

    "permissions": [
        "serial",
        "storage",
        "alwaysOnTopWindows"
    ],
    "sockets": {
        "tcp": {
            "connect": "*:*"
        }
    },

    "icons": {
        "128": "images/bf_icon_128.png"
    }
}
